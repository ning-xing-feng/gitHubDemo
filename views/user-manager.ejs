<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/index.css">
</head>
<body>

  <div class="index">

    <%- include('./common/header.ejs', { nickname: nickname, isAdmin: isAdmin }) %>

    <div class="container">

      <%- include('./common/menu.ejs', { isAdmin: isAdmin }) %>

      <div class="main">
        <div class="menuSerch">       
           <input type="text" placeholder="输入用户昵称" class="nameSerch">
          <button class="btn">搜索</button>
        </div>


        <table>
          <thead>
            <tr>
              <th>序号</th>
              <th>用户名</th>
              <th>用户昵称</th>
              <th>手机号码</th>
              <th>性别</th>
              <th>年龄</th>
              <th>是否管理员</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <!-- 循环显示用户数据 -->
            <% for (var i=0;i<userList.length;i++){%>
                <tr>
                    <td><%- userList[i]._id %></td>
                    <td><%- userList[i].username %></td>
                    <td><%- userList[i].nickname %></td>
                    <td><%- userList[i].phone %></td>
                    <td><%- userList[i].sex || '-' %></td>
                    <td><%- userList[i].age || '-' %></td>
                    <td><%= parseInt(userList[i].is_admin) ? '是' : '否' %></td>
                    <td>
                      <% if(userList[i].username===username) {%>
                        <a href="#">修改</a>
                        <% } else if(parseInt(userList[i].isAdmin)) {%>

                          <% } else {%>
                            <a href="#">修改</a>
                            <a href="#">删除</a>
                            <% } %>
                    </td>
                   </tr>

              <% } %>
          </tbody>
         </table>

         <!-- 实现分页 -->
         <ul class="paging">
           <% for (var i=0; i< totalPage;i++) { %>
            <li>
              <a href="/user-manager.html?page=<%= i+1 %>" class="active" ><%= i+1%>页</a>
            </li>
            <% } %>
         </ul>
        </div>
      </div>
    </div>
</body>
</html>